<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/placeholder"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/match_type_main" />
    <TextView
        android:text="@string/match_number"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_type_main"
        android:id="@+id/match_number_title" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/match_number_title"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/match_type_main"
        android:id="@+id/match_number_main" />
</RelativeLayout>